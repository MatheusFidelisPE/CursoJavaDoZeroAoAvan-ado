package oo.encapsulamento;

public class Pessoa {
	
	private String nome;
	private int idade;
	Pessoa(String nome, int idade){
		setIdade(idade);
		setNome(nome);
	}
	String getNome() {
		return nome;
	}
	void setNome(String nome) {
		this.nome = nome;
	}
	void setIdade(int idade) {
		idade = Math.abs(idade);
		if(idade <= 120) {
			this.idade = idade;
		}
	}
	int getIdade() {
		return this.idade;
	}
	@Override
	public String toString() {
		String retorno;
		retorno  = String.format("Meu nome é %s e tenho %d anos.",getNome(),getIdade());
		return retorno;
	}

}
